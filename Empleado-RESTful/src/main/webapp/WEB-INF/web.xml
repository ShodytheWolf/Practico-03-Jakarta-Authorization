<web-app version="6.0"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
	
	<servlet>
		<servlet-name>jakarta.ws.rs.core.Application</servlet-name>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>jakarta.ws.rs.core.Application</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
	<!-- CONFIG. PARA QUE SOLO LOS RECURSOS HUMANOS PUEDAN AÑADIR Y BORRAR  -->
	<security-constraint> 
		<web-resource-collection>
			<web-resource-name>Anadir y borrar empleados</web-resource-name> <!-- Nombre del recurso -->
			<url-pattern>/api/empleado/anadir</url-pattern> <!-- Endpoints a afectar -->
			<url-pattern>/api/empleado/borrar/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>recursosHumanos</role-name> <!-- Que roles pueden acceder a los Endpoints -->
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee> <!-- Obligar a utilizar SSL para conectarse al endpoint -->
		</user-data-constraint>
	</security-constraint>
	
	<!-- CONFIG. PARA QUE SOLO LOS GERENTES PUEDAN LISTAR TAREAS -->
	<security-constraint> 
		<web-resource-collection>
			<web-resource-name>Listar tareas empleados siendo gerente</web-resource-name> <!-- Nombre del recurso -->
			<url-pattern>/api/tarea/listar/*</url-pattern> <!-- Endpoints a afectar -->
		</web-resource-collection>
		<auth-constraint>
			<role-name>gerente</role-name> <!-- Que roles pueden acceder a los Endpoints -->
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee> <!-- Obligar a utilizar SSL para conectarse al endpoint -->
		</user-data-constraint>
	</security-constraint>
	
	
	<login-config>
		<auth-method>BASIC</auth-method> <!-- se abre un formulario en el browser
		tener en cuenta de que hay otros tipos de autenticación, por ejemplo se 
		puede indicaar que se abra un formulario de login específico  -->
		<realm-name>ApplicationRealm</realm-name>
	</login-config>

	<security-role>
		<role-name>gerente</role-name> <!--  este rol tiene que estar definido en el servidor -->
		<!-- <role-name>empleado</role-name>  -->
	</security-role>
	
</web-app>